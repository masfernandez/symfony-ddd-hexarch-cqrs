<?xml version="1.0" encoding="utf-8"?>
<!--suppress XmlDefaultAttributeValue -->
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Masfernandez\MusicLabel\Catalog\Domain\Album\Album"
            repository-class="Masfernandez\MusicLabel\Catalog\Domain\Album\AlbumRepository"
            table="album">

        <id name="id" type="AlbumId" column="id"/>
        <field name="title" type="AlbumTitle" column="title" length="60" nullable="false"/>
        <field name="releaseDate" type="AlbumReleaseDate" column="release_date"/>

        <many-to-many field="artists"
                      target-entity="Masfernandez\MusicLabel\Catalog\Domain\Artist\Artist"
                      inversed-by="albums"
                      fetch="LAZY">
            <join-table name="albums_artists">
                <join-columns>
                    <join-column name="album_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="artist_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>

</doctrine-mapping>
