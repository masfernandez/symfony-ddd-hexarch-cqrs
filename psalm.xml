<?xml version="1.0"?>
<psalm xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="https://getpsalm.org/schema/config"
       xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
       errorLevel="4"
       autoloader="apps/MusicLabelApp/api/config/bootstrap.php"
>
    <!-- @todo errorLevel="1" -->

    <projectFiles>
        <directory name="apps/MusicLabelApp/api/src/"/>
        <directory name="src/"/>
        <directory name="tests/"/>
        <ignoreFiles>
            <directory name="vendor/"/>
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>

        <MissingPropertyType errorLevel="info"/>

        <RedundantPropertyInitializationCheck>
            <errorLevel type="suppress">
                <file name="src/Shared/Domain/Album/AlbumId.php"/>
            </errorLevel>
        </RedundantPropertyInitializationCheck>

        <InvalidScalarArgument>
            <errorLevel type="suppress">
                <file name="apps/MusicLabelApp/api/src/Repository/Catalog/DoctrineAlbumRepository.php"/>
            </errorLevel>
        </InvalidScalarArgument>

        <!-- TESTS -->
        <InvalidArgument>
            <errorLevel type="suppress">
                <directory name="tests/"/>
            </errorLevel>
        </InvalidArgument>

        <UndefinedMagicMethod>
            <errorLevel type="suppress">
                <directory name="tests/"/>
            </errorLevel>
        </UndefinedMagicMethod>

        <UndefinedMethod>
            <errorLevel type="suppress">
                <directory name="tests/"/>
            </errorLevel>
        </UndefinedMethod>

        <!-- INFRA -->
        <UndefinedInterfaceMethod>
            <errorLevel type="suppress">
                <referencedMethod name="Symfony\Component\Messenger\Stamp\StampInterface::getResult"/>
                <referencedMethod name="Doctrine\DBAL\Driver\ResultStatement::fetchAllNumeric"/>
            </errorLevel>
        </UndefinedInterfaceMethod>

        <UnimplementedInterfaceMethod>
            <errorLevel type="suppress">
                <file name="apps/MusicLabelApp/api/src/Kernel.php"/>
            </errorLevel>
        </UnimplementedInterfaceMethod>

        <RedundantPropertyInitializationCheck>
            <errorLevel type="suppress">
                <file name="src/Shared/Domain/ValueObject/UuidValueObject.php"/>
                <file name="src/Shared/Domain/ValueObject/ValueObjectBase.php"/>
            </errorLevel>
        </RedundantPropertyInitializationCheck>

        <InvalidDocblock>
            <errorLevel type="suppress">
                <directory name="vendor/"/>
            </errorLevel>
        </InvalidDocblock>

    </issueHandlers>
</psalm>
